@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Link to MDBootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css">
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body style="background: #f5f5f5;">
    <section class=" gradient-form">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="https://cdn-icons-png.flaticon.com/512/6525/6525366.png"
                                             style="width: 185px;" alt="logo">
                                        <h4 class="mt-1 mb-3 pb-1">We are Clinic Booking</h4>
                                    </div>

                                    <form method="post">
                                        <p>Please login to your account</p>
                                        <div class="form-outline mb-4">
                                            <input id="form2Example11" class="form-control"
                                                   placeholder="Phone number or email address" asp-for="Username" />
                                            <label class="form-label" for="form2Example11">Username</label>
                                        </div>
                                        <div>
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example22" class="form-control" asp-for="Password" />
                                            <label class="form-label" for="form2Example22">Password</label>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <div class="form-outline mb-4">
                                            <label class="container">
                                                <input type="checkbox">
                                                <span class="checkmark">Remember me</span>
                                            </label>
                                        </div>
                                        <div class="text-center pt-1 mb-4 pb-1">
                                            <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" name="Login">Log in</button>
                                            @* <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" name="ForgotPassword"> *@
                                            <a class="text-muted" href="#!">Forgot password?</a>
                                            </button>
                                        </div>
                                        <!-- Display validation summary -->
                                        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @ViewData["ErrorMessage"]
                                            </div>
                                        }
                                        <div class="d-flex align-items-center justify-content-center pb-4">
                                            <p class="mb-0 me-2">Don't have an account?</p>
                                            <button type="submit" class="btn btn-outline-danger" name="btnCreateAccount">CreateNew</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <img src="https://i.pinimg.com/564x/42/fc/b8/42fcb87b1decf1a1fe2159fb77a946a5.jpg" alt="About Clinic Booking" class="img-fluid with-border">
                                <!-- <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">About Clinic Booking</h4>
                                    <p class="small mb-0">
                                        Chúng tôi là website giúp bạn có thể đặt lịch được phòng khám răng,
                                        giúp cho việc khám và chữa bệnh về răng miệng trở nên tiện lợi hơn bao giờ hết.
                                    </p>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Link to MDBootstrap JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>
</body>
</html>
