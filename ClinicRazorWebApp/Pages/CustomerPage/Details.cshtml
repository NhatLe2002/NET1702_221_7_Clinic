@page
@model ClinicRazorWebApp.Pages.CustomerPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Details</title>
    <link rel="stylesheet" href="~/css/CreateCustomer.css">
</head>
<body>

    <form method="post">
        <div class="wrapper">
            <div class="title">
                Customer Details
            </div>
            <div class="form">
                <div class="inputfield">
                    <label>Id</label>
                    <input type="text" class="input" readonly value="@Model.Customer.CustomerId">
                </div>
                <div class="inputfield">
                    <label>UserId</label>
                    <input type="text" class="input" readonly value="@Model.Customer.UserId">
                </div>
                <div class="inputfield">
                    <label>Name</label>
                    <input type="text" class="input" readonly value="@Model.Customer.CustomerName">
                </div>
                <div class="inputfield">
                    <label>Birthday</label>
                    <input type="text" class="input" readonly value="@Model.Customer.DateOfBirth.ToString()">
                </div>
                <div class="inputfield">
                    <label>Gender</label>
                    <input type="text" class="input" readonly value="@Model.Customer.Gender">
                </div>
                <div class="inputfield">
                    <label>Address</label>
                    <input type="text" class="input" readonly value="@Model.Customer.Address">
                </div>
                <div class="inputfield">
                    <label>Phone</label>
                    <input type="text" class="input" readonly value="@Model.Customer.Phone">
                </div>
                <div class="inputfield">
                    <label>Email</label>
                    <input type="text" class="input" readonly value="@Model.Customer.Email">
                </div>
                <div class="inputfield">
                    <label>Active</label>
                    <input type="text" class="input" readonly value="@Model.Customer.IsActive.ToString()">
                </div>
                <div class="inputfield">
                    <label>Image</label>
                    <img id="imagePreview" src="@Model.Customer.Image" alt="Image Preview" style="display:none; margin-top:10px; max-width:100%; max-height:200px; width:auto; height:auto; border:1px solid #ccc; border-radius:5px; margin-left:auto; margin-right:auto; display:block;" />
                </div>
                <div class="inputfield">
                    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
                    <a asp-page="./Edit" asp-route-id="@Model.Customer?.CustomerId" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>
    </form>
</body>
</html> 