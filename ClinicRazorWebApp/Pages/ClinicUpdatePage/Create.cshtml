@page
@model ClinicRazorWebApp.Pages.ClinicUpdatePage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Clinic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-danger" style="color: red">
                @ViewData["Message"]
            </div>
        }
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Clinic.ClinicName" class="control-label"></label>
                <input asp-for="Clinic.ClinicName" class="form-control" />
                <span asp-validation-for="Clinic.ClinicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Address" class="control-label"></label>
                <input asp-for="Clinic.Address" class="form-control" />
                <span asp-validation-for="Clinic.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Phone" class="control-label"></label>
                <input asp-for="Clinic.Phone" class="form-control" />
                <span asp-validation-for="Clinic.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Email" class="control-label"></label>
                <input asp-for="Clinic.Email" class="form-control" />
                <span asp-validation-for="Clinic.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="clinicImageFile" class="control-label">Clinic Image</label>
                <input id="clinicImageFile" type="file" name="clinicImageFile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Clinic.ClinicDescription" class="control-label"></label>
                <input asp-for="Clinic.ClinicDescription" class="form-control" />
                <span asp-validation-for="Clinic.ClinicDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.OpenTime" class="control-label"></label>
                <input asp-for="Clinic.OpenTime" type="time" class="form-control" />
                <span asp-validation-for="Clinic.OpenTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.CloseTime" class="control-label"></label>
                <input asp-for="Clinic.CloseTime" type="time" class="form-control" />
                <span asp-validation-for="Clinic.CloseTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.IsActive" class="control-label"></label>
                <input asp-for="Clinic.IsActive" class="form-control" />
                <span asp-validation-for="Clinic.IsActive" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
