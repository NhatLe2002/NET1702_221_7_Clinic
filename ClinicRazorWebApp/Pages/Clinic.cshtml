@page
@model ClinicRazorWebApp.Pages.ClinicModel
@{
    ViewData["Title"] = "Clinic page";
    var clinics = Model.Clinics;
}
<h1 class="text-center">
    Clinic Management
</h1>
<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">ClinicID</th>
                    <th class="card-title text-center">ClinicImage</th>
                    <th class="card-title text-center">ClinicName</th>
                    <th class="card-title text-center">Address</th>
                    <th class="card-title text-center">Phone</th>
                    <th class="card-title text-center">ClinicDescription</th>
                    <th class="card-title text-center"></th>
                </tr>
            </thead>
            <tbody class="tblcurrencyList">
                @if (clinics.Count > 0)
                {
                    foreach (var clinic in clinics)
                    {
                        <tr>
                            <td>@clinic.ClinicId</td>
                            <td>@clinic.ClinicImage</td>
                            <td>@clinic.ClinicName</td>
                            <td>@clinic.Address</td>
                            <td>@clinic.Phone</td>
                            <td>@clinic.ClinicDescription</td>
                            
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="currencyModal" tabindex="-1" aria-labelledby="currencyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="currencyModalLabel">currency Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="currencyModalContent"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">ClinicId</label>
                                    <input asp-for="Clinic.ClinicId" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="1">ClinicImage</label>
                                    <input asp-for="Clinic.ClinicImage" class="form-control" />
                                </div>

                                @* <div class="col-md-6">
                                    <label for="1">Code</label>
                                    @Html.EditorFor(m => m.Currency.NationCode, new { htmlAttributes = new { @class = "form-control" } })
                                </div> *@
                                @* <div class="col-md-6">
                                    <label for="1">Active</label>
                                    @Html.CheckBoxFor(m => m.Currency.IsActive.Value, new { htmlAttributes = new { @class = "form-check-input" } })
                                </div> *@
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group row">
                                @* <div class="col-md-6">
                                    <label for="1">Name</label>
                                    @Html.EditorFor(m => m.Currency.CurrencyName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label for="1">Nation</label>
                                    @Html.EditorFor(m => m.Currency.NationCode, new { htmlAttributes = new { @class = "form-control" } })
                                </div> *@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="button" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function add() {
            $('#currencyModal').modal('show');
        }
    </script>
}