@page
@model ClinicRazorWebApp.Pages.DentistPage.DeleteModel

@{
    ViewData["Title"] = "Delete Dentist";
}

<h1>Delete Dentist</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Are you sure you want to delete this dentist?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    <strong>Name:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.DentistName)
                </dd>

                <dt class="col-sm-4">
                    <strong>Date of Birth:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.DateOfBirth)
                </dd>

                <dt class="col-sm-4">
                    <strong>Gender:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.Gender)
                </dd>

                <dt class="col-sm-4">
                    <strong>Address:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.Address)
                </dd>

                <dt class="col-sm-4">
                    <strong>Qualifications:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.ProfessionalQualifications)
                </dd>

                <dt class="col-sm-4">
                    <strong>Phone:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.Phone)
                </dd>

                <dt class="col-sm-4">
                    <strong>Email:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.Email)
                </dd>

                <dt class="col-sm-4">
                    <strong>Clinic Name:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Dentist.Clinic.ClinicName)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Dentist.DentistId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    .row {
        margin-bottom: 15px;
    }

    dt {
        font-weight: bold;
    }
</style>
