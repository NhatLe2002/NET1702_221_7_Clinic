@page
@model ClinicRazorWebApp.Pages.Dentists.CreateDentistModel
@{
    ViewData["Title"] = "Create Dentist";
}

<h2>Create Dentist</h2>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Dentist.DentistName" class="control-label"></label>
        <input asp-for="Dentist.DentistName" class="form-control" />
        <span asp-validation-for="Dentist.DentistName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.DateOfBirth" class="control-label"></label>
        <input asp-for="Dentist.DateOfBirth" class="form-control" max="@Model.MaxDate" />
        <span asp-validation-for="Dentist.DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.Gender" class="control-label"></label>
        <select asp-for="Dentist.Gender" class="form-control">
            <option value="">-- Select Gender --</option>
            <option>Male</option>
            <option>Female</option>
        </select>
        <span asp-validation-for="Dentist.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.ProfessionalQualifications" class="control-label"></label>
        <input asp-for="Dentist.ProfessionalQualifications" class="form-control" />
        <span asp-validation-for="Dentist.ProfessionalQualifications" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.Phone" class="control-label"></label>
        <input asp-for="Dentist.Phone" class="form-control" />
        <span asp-validation-for="Dentist.Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.Email" class="control-label"></label>
        <input asp-for="Dentist.Email" class="form-control" />
        <span asp-validation-for="Dentist.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.Address" class="control-label"></label>
        <input asp-for="Dentist.Address" class="form-control" />
        <span asp-validation-for="Dentist.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Upload Image</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.ClinicId" class="control-label"></label>
        <select asp-for="Dentist.ClinicId" class="form-control" asp-items="@(ViewData["ClinicId"] as SelectList)"></select>
        <span asp-validation-for="Dentist.ClinicId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dentist.UserId" class="control-label"></label>
        <select asp-for="Dentist.UserId" class="form-control" asp-items="@(ViewData["UserId"] as SelectList)"></select>
        <span asp-validation-for="Dentist.UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div class="text-right">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
