@page
@model ClinicRazorWebApp.Pages.DentistPage.CreateModel

@{
    ViewData["Title"] = "Create Dentist";
}

<h1>Create Dentist</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label for="clinicId">Clinic:</label>
                    <select id="clinicId" asp-for="Dentist.ClinicId" class="form-control" asp-items="@(ViewData["ClinicId"] as SelectList)"></select>
                    <span asp-validation-for="Dentist.ClinicId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="userId">User:</label>
                    <select id="userId" asp-for="Dentist.UserId" class="form-control" asp-items="@(ViewData["UserId"] as SelectList)"></select>
                    <span asp-validation-for="Dentist.UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="dentistName">Name:</label>
                    <input id="dentistName" asp-for="Dentist.DentistName" class="form-control" />
                    <span asp-validation-for="Dentist.DentistName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="dateOfBirth">Date of Birth:</label>
                    <input id="dateOfBirth" asp-for="Dentist.DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="Dentist.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="gender">Gender:</label>
                    <select id="gender" asp-for="Dentist.Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Dentist.Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="address">Address:</label>
                    <input id="address" asp-for="Dentist.Address" class="form-control" />
                    <span asp-validation-for="Dentist.Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="qualifications">Professional Qualifications:</label>
                    <input id="qualifications" asp-for="Dentist.ProfessionalQualifications" class="form-control" />
                    <span asp-validation-for="Dentist.ProfessionalQualifications" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="phone">Phone:</label>
                    <input id="phone" asp-for="Dentist.Phone" class="form-control" />
                    <span asp-validation-for="Dentist.Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input id="email" asp-for="Dentist.Email" class="form-control" />
                    <span asp-validation-for="Dentist.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="image">Image:</label>
                    <input id="image" asp-for="ImageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
