@page
@model ClinicRazorWebApp.Pages.UserPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center full-screen-background">
    <div class="form-container">
        <div class="card-body p-4">
            <h1 class="text-center">Delete User</h1>
            <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Username)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Username)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Password)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Password)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.IsActive)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.IsActive)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Role.RoleName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Role.RoleName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Fullname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Fullname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Phone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Phone)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Birthday)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Birthday)
                </dd>
            </dl>
            <form method="post" class="text-center">
                <input type="hidden" asp-for="User.UserId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .full-screen-background {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100%;
        background: url('https://penviet.com/wp-content/uploads/2023/06/thiet-ke-phong-kham-nha-khoa-smile-center-11-768x576.jpg') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        z-index: -1;
    }

    .form-container {
        width: 100%;
        max-width: 600px;
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        margin: 10% auto;
        padding: 20px;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-y: auto;
    }

    .btn {
        color: white;
        padding: 5px;
        text-decoration: none;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
    }
</style>
